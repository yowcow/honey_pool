{erl_opts, [
            debug_info,
            warnings_as_errors
           ]}.

{deps, [
        {worker_pool, {git, "git://github.com/inaka/worker_pool.git", {tag, "5.1.0"}}},
        {gun, {git, "git://github.com/ninenines/gun.git", {tag, "2.0.0-rc.2"}}}
       ]}.

{shell, [
         {config, "config/sys.config"},
         {apps, [honey_pool]}
        ]}.

{xref_checks, [
               undefined_function_calls,
               undefined_functions,
               locals_not_used,
               deprecated_function_calls,
               deprecated_functions
              ]}.
